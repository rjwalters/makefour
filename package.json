{
  "name": "makefour",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "MakeFour - four-in-a-row strategy site with AI coaching",
  "author": "rjwalters",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "tsc --noEmit && biome lint .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "node --experimental-vm-modules node_modules/vitest/vitest.mjs run",
    "test:watch": "node --experimental-vm-modules node_modules/vitest/vitest.mjs watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:report": "playwright show-report",
    "pages:dev": "wrangler pages dev --proxy=5173 --compatibility-date=2024-01-01",
    "pages:deploy": "npm run build && wrangler pages deploy ./dist",
    "pages:deploy:prod": "npm run build && wrangler pages deploy ./dist --branch=main",
    "db:create": "wrangler d1 create makefour-db",
    "db:create:prod": "wrangler d1 create makefour-db-prod",
    "db:local": "wrangler d1 execute makefour-db --local --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute makefour-db --local --file=./schema.sql",
    "db:migrate:remote": "wrangler d1 execute makefour-db --remote --file=./schema.sql",
    "db:migrate:prod": "wrangler d1 execute makefour-db --remote --file=./schema.sql",
    "db:backup:local": "wrangler d1 export makefour-db --local --output=./backups/backup-$(date +%Y%m%d-%H%M%S).sql",
    "db:backup:remote": "wrangler d1 export makefour-db --remote --output=./backups/backup-$(date +%Y%m%d-%H%M%S).sql",
    "db:console:local": "wrangler d1 execute makefour-db --local --command='SELECT * FROM users; SELECT * FROM games;'",
    "db:console:remote": "wrangler d1 execute makefour-db --remote --command='SELECT * FROM users; SELECT * FROM games;'",
    "wrangler:login": "wrangler login",
    "wrangler:whoami": "wrangler whoami",
    "deploy": "npm run build && npm run db:migrate:remote && npm run pages:deploy:prod"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "recharts": "^3.6.0",
    "tailwind-merge": "^2.5.5",
    "zod": "^4.1.12"
  },
  "optionalDependencies": {
    "onnxruntime-web": "^1.23.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@playwright/test": "^1.57.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.20",
    "bcryptjs": "^3.0.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.6.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.0",
    "wrangler": "^4.45.0"
  }
}
